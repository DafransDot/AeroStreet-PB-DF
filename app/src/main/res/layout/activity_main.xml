<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat datang di AeroStreet Shoes"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingBottom="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bagaimana Dengan hari ini?"
        android:textAlignment="center"
        android:textSize="15dp"
        android:padding="3dp"
        android:fontFamily="monospace"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sepatu apa yang akan anda kenakan hari ini? OOTD seperti apa yang anda suka silahkan pilih pilihan anda"
        android:textAlignment="center"
        android:textSize="15dp"
        android:fontFamily="monospace"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text=" "/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/llCasual"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/ivCasual"
                    app:srcCompat="@drawable/casual" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="casual"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:text="Sepatu jenis ini dirancang untuk aktivitas yang santai, jadi tidak dilengkapi desain atau teknologi khusus."/>

                </LinearLayout>


        <LinearLayout
            android:id="@+id/llSport"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

             <ImageView
                    android:id="@+id/ivSport"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:srcCompat="@drawable/sport"
                     />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sport"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="desain sport shoes biasanya disesuaikan dengan kondisi dan medan yang akan dihadapi."/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llColab"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivColab"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:srcCompat="@drawable/kolab2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kolaborasi"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="12dp"
                android:text="Sepatu dengan berbagai Kolaborasi yang dapat anda dapatkan sepadu dengan type ini biasanya Limited Edition"/>

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="75dp"
        android:text=" "
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Pakailah Buatan Indonesia "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AeroStreet punya Cerita"
        android:textAlignment="center"
        android:textStyle="italic"/>

</LinearLayout>